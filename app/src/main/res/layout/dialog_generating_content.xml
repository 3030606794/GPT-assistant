<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_gen_content_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ui_generating_content_enabled" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:boxBackgroundMode="outline"
            android:hint="@string/ui_generating_content_prefix">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_gen_content_prefix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/ui_generating_content_hint_use_default"
            android:textSize="12sp"
            android:alpha="0.7" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundMode="outline"
            android:hint="@string/ui_generating_content_suffix">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_gen_content_suffix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dropdown (Exposed) : Marker Style -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/ui_generating_content_marker_style">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/act_gen_marker_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dropdown (Exposed) : Marker Color -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/ui_generating_content_marker_color">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/act_gen_marker_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/ui_generating_content_marker_rainbow_len"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/act_gen_marker_len"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ui_generating_content_marker_rainbow_speed" />

            <TextView
                android:id="@+id/tv_gen_marker_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70%" />
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_gen_marker_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:labelBehavior="withinBounds" />


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_gen_content_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/ui_generating_content_toast_enabled" />

        <!-- Dropdown (Exposed) : Completion Sound -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/ui_generating_content_complete_sound">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/act_gen_complete_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_ai_reply_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/ui_ai_reply_vibrate" />

        <TextView
            android:id="@+id/tv_vibrate_intensity_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ui_ai_reply_vibrate_intensity" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_vibrate_intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:labelBehavior="withinBounds" />

        <TextView
            android:id="@+id/tv_vibrate_frequency_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ui_ai_reply_vibrate_frequency" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_vibrate_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:labelBehavior="withinBounds" />

    </LinearLayout>
</ScrollView>
